extends ../layouts/admin

append head
    script(src="https://cdn.quilljs.com/1.3.6/quill.min.js")
    link(href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet")

block content
    h1 Add Your content here
    include ../includes/messages
    form#addForm(action="/api", method="post", enctype="multipart/form-data")
        p
            label(for="title") Title
            input#title(type="text", name="title", required)
        p
            label(for="author") Author
            input#author(type="text", name="author", required)
        p
            label(for="pub_date") Date Published
            input#pub_date(type="date", name="pub_date", required)
        p
            label(for="thumbnail") Thumbnail
            img#thumbnail-img(src="", alt="")
            input#thumbnail(type="file", name="thumbnail", accept="image/*", required)
        div.quillEditor-wrapper
            label(for="quillEditor") Content
            input(type="hidden", name="content")
            include ../includes/editor.pug
        div.button-container
            button(type="submit").btn Create Post
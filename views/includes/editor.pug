div#toolbar
    span.ql-formats
        button.ql-bold(title="Bold")
        button.ql-italic(title="Italic")
        button.ql-underline(title="Underline")
        button.ql-strike(title="Strikethrough")
        button.ql-code(title="Inline Code")
        button.ql-link(title="Link")
    span.ql-formats
        button.ql-script(value="sub", title="SubScript")
        button.ql-script(value="super", title="SuperScript")
    span.ql-formats
        button.ql-blockquote(title="Blockquote")
        button.ql-code-block(title="Code Block")
        select.ql-header(title="Header")
            option(selected)
            option(value="1")
            option(value="2")
            option(value="3")
            option(value="4")
            option(value="5")
            option(value="6")
    span.ql-formats
        select.ql-align(title="Align")
            option(selected)
            option(value="center")
            option(value="right")
            option(value="justify")
    span.ql-formats
        button.ql-direction(value="rtl", title="rtl/ltr")
    span.ql-formats
        button.ql-list(value="ordered", title="Numbered List")
        button.ql-list(value="bullet", title="Bullet List")
    span.ql-formats
        button.ql-image(title="Insert Image")
        button.ql-video(title="Insert Video")
    span.ql-formats
        button.ql-clean(title="Clear Formatting")
div#quillEditor!= decodeURIComponent(content || '')